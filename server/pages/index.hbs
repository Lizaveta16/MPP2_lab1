<!DOCTYPE html>
<html>
    <head>
        {{>head}}
    </head>
    <body>
        {{>header}}
			<section id="Home" class="intro">
				<section class="contacts">
					<div class="container">
						<div class="contacts__inner">
							<h1 class="contacts__title">Add a task</h1>
							<div class="contacts__info">
								<div class="contacts-item__info">
									<form name="contact-form" action="/create" method="post" enctype="multipart/form-data" class="contact-item__form">
										<input type="text" name="name" placeholder="Subject" required><br><br>
										Date: <input id="date" type="date" name="date" required><br><br>
										<input type="file" name="file" placeholder="select a file"><br><br>
										<button class="subscribe">send</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</section>
			</section>
		{{>footer}}
		<script>
			var today = new Date();
			var dd = today.getDate();
			var mm = today.getMonth()+1;
			var yyyy = today.getFullYear();
			if(dd<10){
			dd='0'+dd
			} 
			if(mm<10){
			mm='0'+mm
			} 
			today = yyyy+'-'+mm+'-'+dd;
			document.getElementById("date").setAttribute("min", today);
		</script>
    </body>
</html>